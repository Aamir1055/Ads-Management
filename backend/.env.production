# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Instructions: Copy this file to .env and update with your production values

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=production
PORT=5000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ALLOWLIST=http://localhost:3000,https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=ads_reporting

# Database Connection Pool Settings
DB_CONNECTION_LIMIT=100
DB_QUEUE_LIMIT=0
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate strong secrets for production:
# openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_32_characters_minimum
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_32_characters_minimum

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_32_characters_minimum

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# RATE LIMITING (Production Values)
# =============================================================================
GLOBAL_RATE_LIMIT_WINDOW=900000
GLOBAL_RATE_LIMIT_MAX=500
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
LOG_DATE_PATTERN=YYYY-MM-DD

# =============================================================================
# SECURITY HEADERS
# =============================================================================
TRUST_PROXY_HOPS=1

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_DB_CLEANUP_DAYS=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# REDIS CONFIGURATION (Optional - for session storage)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SSL/TLS CONFIGURATION (for HTTPS)
# =============================================================================
SSL_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# =============================================================================
# ADDITIONAL PRODUCTION SETTINGS
# =============================================================================
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_REPORTING=true
HEALTH_CHECK_INTERVAL=300000

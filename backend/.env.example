# =============================================================================
# BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your values
# This file documents all required environment variables for the backend

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the backend server (REQUIRED - no default fallback)
PORT=5000

# Environment mode
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=ads_reporting
DB_PORT=3306

# Database Connection Pool Settings (optional)
DB_CONNECTION_LIMIT=100
DB_QUEUE_LIMIT=0
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secrets (generate strong secrets for production)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_32_characters_minimum

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed frontend URLs (comma-separated)
CLIENT_URL=http://localhost:3000,http://localhost:5173
CORS_ALLOWLIST=http://localhost:3000,http://localhost:5173

# Frontend URL for production
FRONTEND_URL=http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
GLOBAL_RATE_LIMIT_WINDOW=900000
GLOBAL_RATE_LIMIT_MAX=500
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=300

# =============================================================================
# TRUST PROXY CONFIGURATION
# =============================================================================
# Number of proxy hops to trust (for load balancers/reverse proxies)
TRUST_PROXY_HOPS=1

# =============================================================================
# PRODUCTION EXAMPLES
# =============================================================================
# For production deployment, use these patterns:
# PORT=80
# NODE_ENV=production
# DB_HOST=your-production-db-host
# DB_USER=your_production_db_user
# DB_PASSWORD=your_secure_production_password
# CLIENT_URL=https://yourdomain.com
# CORS_ALLOWLIST=https://yourdomain.com,https://www.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# JWT_SECRET=your_super_secure_jwt_secret_64_characters_minimum
# REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_64_characters_minimum
